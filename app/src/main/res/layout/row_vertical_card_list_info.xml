<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutParent"
    android:layout_marginTop="@dimen/custom_margin_10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivBanner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/custom_margin_220dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:background="@color/grey_20"/>

        <ImageView
            android:id="@+id/ivPlayIcon"
            android:layout_width="@dimen/custom_margin_40dp"
            android:layout_height="@dimen/custom_margin_40dp"
            android:background="@drawable/ic_play_video_circle_filled"
            android:backgroundTint="@android:color/white"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:layout_centerInParent="true"
            android:visibility="visible"/>
        <!--app:srcCompat="@drawable/ic_play_video_circle_filled"-->
    </RelativeLayout>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="@dimen/text_view_size_16sp"
        android:textColor="@android:color/black"
        android:maxLines="2"
        android:ellipsize="end"
        app:fontFamily="sans-serif-medium"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/custom_margin_10dp"
        android:layout_marginBottom="@dimen/custom_margin_10dp"
        android:paddingLeft="10dp"
        android:paddingRight="@dimen/custom_margin_10dp"
        android:visibility="visible"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/custom_margin_1dp"
        android:background="@color/grey_3"/>
</LinearLayout>

